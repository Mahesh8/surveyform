<div class='col-md-8'>
  <div>
    <%= form_with(model: user, local: true) do |form| %>
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field"> 1.
        <%= form.label :name %> :
        <%= form.text_field :name, id: :user_name %>
      </div><br/>

      <div class="field"> 2.
        <%= form.label :phone %> :
        <%= form.text_field :phone, id: :user_phone %>
      </div><br/>

      <div class="field"> 3.
        <%= form.label :email %> :
        <%= form.text_field :email, id: :user_email %>
      </div><br/>

      <div class="form-group"> 4.
        <label for="location">Location:</label>
        <select class="form-control" id="location" name="user[location]">
          <option>Tourist Spot</option>
          <option>Town</option>
          <option>Inland</option>
          <option>Rural</option>
          <option>Others</option>
        </select>
      </div><br/>

      <div class="field"> 5.
        <%= form.label :town %> :
        <%= form.text_field :town, id: :user_town %>
      </div><br/>

      <div class="field"> 6. 
        <%= form.label :years_in_business %> :
        <%= form.number_field :years_in_business, id: :user_years_in_business %>
      </div><br/>

      <div class="form-group"> 7.
        <label for="category_business">Category of Business:</label>
        <select class="form-control" id="category_business" name="user[category_business]">
          <option>Bakery</option>
          <option>Spirits</option>
          <option>Hotels</option>
          <option>Bar&Rest</option>
          <option>Ceremonial Hall</option>
          <option>Others</option>
        </select>
      </div><br/>

      <div class="field"> 8. 
        <%= form.label :number_of_sales_in_a_day %> (estimated):
        <%= form.number_field :no_sales_per_day, id: :user_no_sales_per_day %>
      </div><br/>

      <div class="field"> 9.
        <label> Types of Packaging Water Brand Sold : </label>
        <select class="form-control" id="type_of_brand" multiple="multiple" name="user[type_of_brand][]">
          <option value="Bisleri">Bisleri</option>
          <option value="Aquafina">Aquafina</option>
          <option value="Kinley">Kinley</option>
          <option value="Bindu">Bindu</option>
          <option value="local">Local</option>
          <option value="others">Others</option>
        </select>
      </div><br/>

      <div class="field1"> 
        <div id="Bisleri" class ="hidden" style= "padding:10px;">
          <label> Cost of Bisleri : </label>
          Half litres:<input type="number" name="user[cost][Bisleri][half_litre]"/>
          1 litres: <input type="number" name="user[cost][Bisleri][half_litre]"/> 
          2 litres: <input type="number" name="user[cost][Bisleri][half_litre]"/> 
          <br/>
        </div>
        <div id="Aquafina" class ="hidden" style= "padding:10px;">
          <label> Cost of Aquafina : </label>
          Half litres: <input type="number" name="user[cost][Aquafina][half_litre]"/> 
          1 litres:  <input type="number" name="user[cost][Aquafina][half_litre]"/> 
          2 litres: <input type="number" name="user[cost][Aquafina][half_litre]"/> 
          <br/>
        </div>
        <div id="Kinley" class ="hidden" style= "padding:10px;">
          <label> Cost of Kinley : </label>
          Half litres: <input type="number" name="user[cost][Kinley][half_litre]"/> 
          1 litres:<input type="number" name="user[cost][Kinley][half_litre]"/> 
          2 litres:<input type="number" name="user[cost][Kinley][half_litre]"/>  
          <br/>
        </div>
        <div id="Bindu" class ="hidden" style= "padding:10px;">
          <label> Cost of Bindu : </label>
          Half litres:  <input type="number" name="user[cost][Bindu][half_litre]"/> 
          1 litres:<input type="number" name="user[cost][Bindu][half_litre]"/> 
          2 litres:<input type="number" name="user[cost][Bindu][half_litre]"/> 
          <br/>
        </div>
        <div id="local" class ="hidden" style= "padding:10px;">
          <label> Cost of Local : </label>
          Half litres: <input type="number" name="user[cost][local][half_litre]"/>
          1 litres:<input type="number" name="user[cost][local][half_litre]"/> 
          2 litres:<input type="number" name="user[cost][local][half_litre]"/> 
          <br/>
        </div>
        <div id="others" class ="hidden" style= "padding:10px;">
          <label> Cost of Others : </label>
          Half litres: <input type="number" name="user[cost][others][half_litre]"/> 
          1 litres:<input type="number" name="user[cost][others][half_litre]"/> 
          2 litres:<input type="number" name="user[cost][others][half_litre]"/>
          <br/>
        </div>
      </div>
      <br/>

      <div class="field"> 10. 
        <%= form.label :open_to_new_brand %> :
        <div class = "addcs" style= "margin-left:10%">
          <div class="radio">
            <label><input type="radio" name="user[open_to_new_brand]" value=true checked> Yes </label>
          </div>
          <div class="radio">
            <label><input type="radio" name="user[open_to_new_brand]" value=false> No</label>
          </div>
        </div>
      </div><br/>

      <div class="field"> 11. 
        <%= form.label :commission_from_distributors %> (in percentage) :
        <%= form.number_field :commission_from_distributors, id: :user_commission_from_distributors %>
      </div><br/>

      <div class="field"> 12. 
        <%= form.label :local_distributors_name %> :
        <%= form.text_field :local_distributor_name, id: :user_local_distributor_name %>
      </div><br/>

      <div class="field"> 13. 
        <%= form.label :selling_price_of_water_bottles %> :
        <%= form.number_field :selling_price_bottles, id: :user_selling_price_bottles %>
      </div><br/>

      <div class="field"> 14.
        <%= form.label :expected_water_bottle_cost_per_litre %> :
        <%= form.number_field :expected_bottle_cost, id: :user_expected_bottle_cost %>
      </div><br/>

      <div class="field"> 15.
        <%= form.label :would_you_like_to_sell_our_product %> :
        <div class = "addcss2" style= "margin-left:10%">
          <div class="radio">
            <label><input type="radio" name="user[sell_our_product]" value=true checked>Yes</label>
          </div>
          <div class="radio">
            <label><input type="radio" name="user[sell_our_product]" value=false >No</label>
          </div>
        </div>
      </div><br/>

      <div > 16. 
        <label> Seasonal Sales Report:</label>
        <div class="all_period" style="margin-left:10%">
          <div class="field">
            <%= form.label :high_period %> :
            <%= form.text_field :high_period, id: :user_high_period %>
          </div>

          <div class="field"> 
            <%= form.label :low_period %> :
            <%= form.text_field :low_period, id: :user_low_period %>
          </div>

          <div class="field"> 
            <%= form.label :moderate %> :
            <%= form.text_field :moderate, id: :user_moderate %>
          </div>
        </div>
      </div><br/>

      <div class="field"> 17.
        <label> Amenities provided :</label>
        <select class="form-control" id="amenities_provided" multiple="multiple" name="user[amenities_provided][]">
          <option value="freezer">Freezer</option>
          <option value="delivery">Delivery</option>
          <option value="freezer and delivery">Freezer and Delivery</option>
          <option value="Incentives">Incentives</option>
        </select>
      </div><br/>

      <div class="field"> 18.
        <%= form.label :number_of_deliveries_done_by_your_distributor_in_a_month %> :
        <%= form.number_field :total_delivered_by_distributor, id: :user_total_delivered_by_distributor %>
      </div><br/>

      <div class="field"> 19.
        <%= form.label :local_choice_of_drink %> :
        <%= form.text_field :local_choice_of_drink, id: :user_local_choice_of_drink %>
      </div><br/>

       <div class="field"> 20.
        <%= form.label :advertising_material_provided %> :
        <%= form.text_field :advertising_material_provided, id: :user_advertising_material_provided %>
      </div><br/>

      <div class="actions">
        <%= form.submit class: "btn btn-primary"%>
        <input class="btn btn-danger" type="reset" value="Reset">
      </div>

    <% end %>
    <%= link_to "Export users as spreadsheet", users_path(format: "xlsx") %>
  <div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
      $('#type_of_brand, #amenities_provided').multiselect();
  });

  $(function() {
  $("#type_of_brand").on("change", function() {
    var selected_values = $(this).val();

    // add hidden to divs
    $(".field1 > div").addClass("hidden");

    // remove hidden from selected divs
    selected_values.forEach(function(val) {
      var id = "#" + val;
      $(id).removeClass("hidden");
    });
  });
});
</script>